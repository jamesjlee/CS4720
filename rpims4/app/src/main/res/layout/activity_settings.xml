<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#34495e"
    tools:context="deepjamcam.rpims4.settings" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IP Address"
        android:id="@+id/ipLbl"
        android:textColor="#ecf0f1"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingRight="20dp" />

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/ip1"
        android:layout_toEndOf="@+id/ipLbl"
        android:inputType="number"
        android:background="#ecf0f1"
        android:paddingLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/ipLbl" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ipTriangle"
        android:layout_toEndOf="@+id/ip1"
        android:src="@drawable/iptriangle"
        android:layout_below="@+id/ip1"
        android:paddingBottom="20dp" />

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/ip2"
        android:layout_toEndOf="@+id/ipTriangle"
        android:inputType="number"
        android:background="#ecf0f1"
        android:paddingLeft="20dp"
        android:layout_above="@+id/ipTriangle"
        android:layout_alignParentTop="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ipTriangle1"
        android:layout_toEndOf="@+id/ip2"
        android:src="@drawable/iptriangle"
        android:paddingBottom="20dp"
        android:layout_alignBottom="@+id/ipTriangle" />

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/ip3"
        android:layout_toEndOf="@+id/ipTriangle1"
        android:inputType="number"
        android:background="#ecf0f1"
        android:paddingLeft="20dp"
        android:layout_above="@+id/ipTriangle1"
        android:layout_alignParentTop="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ipTriangle3"
        android:layout_toEndOf="@+id/ip3"
        android:src="@drawable/iptriangle"
        android:paddingBottom="20dp"
        android:layout_below="@+id/ip3" />

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/ip4"
        android:layout_toEndOf="@+id/ipTriangle3"
        android:inputType="number"
        android:background="#ecf0f1"
        android:paddingLeft="20dp"
        android:layout_above="@+id/ipTriangle3"
        android:layout_alignParentTop="true" />

</RelativeLayout>
